<div class="form-floating {{ mt-4 }}">
    <input type="text" id="{{ column }}" name='{{ column }}' class="form-control"
        value="{{ old('{{ column }}', optional({{ field_form_var }})->{{ column }}) }}"
        placeholder="{{ __('{{ column_title }}') }}"
    />
    <label for="{{ column }}">{{ __('{{ column_title }}')}}</label>
</div>